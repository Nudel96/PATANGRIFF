# Frontend-Only Environment Variables
# No backend or database connections required

# Application Configuration
PUBLIC_APP_NAME=PRICEACTIONTALK
PUBLIC_APP_VERSION=1.0.0
PUBLIC_APP_DESCRIPTION="Forge Warriors, Command Respect"

# Feature Flags (all frontend features)
PUBLIC_ENABLE_TRADING_JOURNAL=true
PUBLIC_ENABLE_MARKET_HEATMAP=true
PUBLIC_ENABLE_COMMUNITY_FEATURES=true
PUBLIC_ENABLE_LEARNING_SYSTEM=true
PUBLIC_ENABLE_SQUADS=true
PUBLIC_ENABLE_FORUMS=true

# Demo/Development Settings
PUBLIC_DEMO_MODE=true
PUBLIC_MOCK_DATA=true
PUBLIC_AUTO_LOGIN=false

# Analytics (optional)
PUBLIC_ANALYTICS_ID=your_analytics_id
PUBLIC_GTM_ID=your_gtm_id

# External Services (optional)
PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
PUBLIC_SUPPORT_EMAIL=support@priceactiontalk.com